{% extends "base3.html.twig" %}
{% block title %}BlackJack Setup{% endblock %}
{% block main %}

    <div class="blackjack-container">
        <h1>Välkommen till Black Jack!</h1>

        <form action="{{ path('blackjack_setup') }}" method="post">
            <label for="name">Ditt namn:</label>
            <input type="text" id="name" name="name" required>

            <label for="numberOfHands">Antal händer (1-3):</label>
            <input type="number" id="numberOfHands" name="numberOfHands" min="1" max="3" required>

            <label for="bankAccount">Saldo:</label>
            <input type="number" id="bankAccount" name="bankAccount" min="1" required>

            <button type="submit">Starta spel</button>
        </form>
    </div>
{% endblock %}
